@model BattleShip.Repository.ViewModels.PlayBattleViewModel

<script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
<script src="~/signalr/hubs"></script>

<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
<link href="~/Content/battle-container.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
<script src="~/Scripts/bootbox.js" type="text/javascript"></script>
<script src="~/Scripts/print-board.js" type="text/javascript"></script>
<script src="~/Scripts/battle.js" type="text/javascript"></script>


@{
    ViewBag.Title = "Play";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Hidden("PlayerName",User.Identity.Name)
@Html.Hidden("OpponentName", Model.Opponent)
<div class="row text-center">
    <div class="panel panel-default">
        <div class="col-xs-12 col-md-6" id="player">
            <div class="panel-heading">
                <div class="well well-sm no-margin">
                    Player: @User.Identity.Name
                </div>
            </div>
            <div class="panel-body">
                <table></table>
            </div>
        </div>
        <div class="col-xs-12 col-md-6" id="opponent">
            <div class="panel-heading">
                <div class="well well-sm no-margin">
                    Opponent: @Model.Opponent
                </div>
            </div>
            <div class="panel-body">
                <table></table>
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-xs-12">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <button type="button" class="btn btn-danger" id="js-give-in">Give in</button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary" id="js-clear-board">Clear board</button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-success" id="js-ready">Ready</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-responsive text-left">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Number of decks</th>
                                <th>Number per player</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Carrier</td>
                                <td>5</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>Battleship</td>
                                <td>4</td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>Crusier</td>
                                <td>3</td>
                                <td>2</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Submarine</td>
                                <td>2</td>
                                <td>2</td>
                            </tr>
                            <tr>
                                <td>5</td>
                                <td>Destroyer</td>
                                <td>1</td>
                                <td>2</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>