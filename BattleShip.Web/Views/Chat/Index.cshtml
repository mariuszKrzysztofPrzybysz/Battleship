@model IEnumerable<BattleShip.Repository.ViewModels.AccountPermissionsViewModel>

<script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/bootbox.js"></script>
<script src="~/Scripts/chat.js"></script>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    * {
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    body {
        margin: 0 auto;
    }

        body .js-chat-container .well {
            margin-bottom: 0;
        }

            body .js-chat-container .well .panel-default {
                margin-bottom: 0px !important;
            }

            body .js-chat-container .well .panel-body {
                overflow-y: auto;
            }

    .nopadding {
        padding: 0 !important;
        margin: 0 !important;
    }

    /*# sourceMappingURL=Photos-container.css.map */
</style>
@section scripts
{

    <script>
        $(function () {
            const jsChatContainer = $('div.js-chat-container');
            const navbarHeader = $('div.navbar-header');
            const divPanel = $('div.panel');
            const divPanelHeading = $('div.panel-heading');
            const divPanelBody = $('div.panel-body');
            const hr = $('hr');
            const footer = $('footer');

            jsChatContainer.height($(window).height() -
                navbarHeader.outerHeight() -
                hr.outerHeight() -
                footer.outerHeight());

            divPanel.outerHeight(jsChatContainer.height() - divPanelHeading.outerHeight());

            divPanelBody.innerHeight(divPanel.innerHeight() - divPanelHeading.outerHeight());
        });
    </script>
}
<div class="js-chat-container container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-5 nopadding">
            <div class="well well-sm">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="input-group">
                            <input type="text" class="form-control" id="search-input" placeholder="Szukaj...">
                            <div class="input-group-btn">
                                <button class="btn btn-default" id="search-button" type="button">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group" id="player-list-container">
                            @foreach (var player in Model)
                            {
                                <li class="list-group-item" data-player-name="@{@player.Login;}">
                                    <div class="media">
                                        <div class="media-left">
                                            <img src="~/Content/Images/Photos/@{@player.Login;}.jpg" class="img-rounded" alt="@{@player.Login;}" width="50" height="50">
                                        </div>
                                        <div class="media-body">
                                            <h4 class="media-heading">@{@player.Login;}</h4>
                                            @{
                                                var privateChat = player.AllowPrivateChat == true ? "active" : "disabled";
                                                var battle = player.AllowNewBattle == true ? "active" : "disabled";
                                            }
                                            <button type="button" class="btn btn-info btn-xs @privateChat" data-event="private-chat">Private chat</button>
                                            <button type="button" class="btn btn-danger btn-xs @battle" data-event="battle">New battle</button>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-7 nopadding">
            <div class="well well-sm">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="input-group">
                            <input type="text" class="form-control" id="message-input" placeholder="Napisz wiadomość...">
                        </div>
                    </div>

                    <div class="panel-body">
                        <div id="js-tab-pane-container" class="tab-content">
                            <ul class="nav nav-tabs" id="js-nav-tabs">
                                <li class="active"><a href="#chat" data-toggle="tab">chat</a></li>
                            </ul>
                            <div class="tab-pane fade active in" id="chat" style="overflow-y: auto;">
                                <ul class="list-group" id="js-chat-messages-container"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>